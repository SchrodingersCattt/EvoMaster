! CP2K template: Cell optimization (variable cell relaxation, DFT/GPW)
! Adapt: PROJECT, basis/potential, CUTOFF, PRESSURE, structure
&GLOBAL
  PROJECT my_cell_opt
  RUN_TYPE CELL_OPT
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 50
      MAX_DIIS 7
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
      SCHEME MONKHORST-PACK 4 4 4
    &END KPOINTS
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      ALPHA_BETA_GAMMA 90 90 90
    &END CELL
    &COORD
      Si  0.000  0.000  0.000
      Si  1.357  1.357  1.357
    &END COORD
    &KIND Si
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &CELL_OPT
    OPTIMIZER BFGS
    MAX_ITER 200
    MAX_DR 3.0E-3
    MAX_FORCE 4.5E-4
    PRESSURE_TOLERANCE 100
    EXTERNAL_PRESSURE [bar] 0.0
  &END CELL_OPT
&END MOTION
