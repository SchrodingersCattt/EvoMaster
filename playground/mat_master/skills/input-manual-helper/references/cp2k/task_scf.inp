! CP2K template: Single-point SCF energy calculation (DFT/GPW)
! Adapt: PROJECT name, basis/potential files, CUTOFF, k-points, structure
&GLOBAL
  PROJECT my_project
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 50
      ! For metals: add ADDED_MOS and SMEAR
      ! ADDED_MOS 20
      ! &SMEAR ON
      !   METHOD FERMI_DIRAC
      !   ELECTRONIC_TEMPERATURE [K] 300
      ! &END SMEAR
      MAX_DIIS 7
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
      SCHEME MONKHORST-PACK 4 4 4
    &END KPOINTS
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      ALPHA_BETA_GAMMA 90 90 90
    &END CELL
    &COORD
      ! Replace with actual atomic coordinates
      Si  0.000  0.000  0.000
      Si  1.357  1.357  1.357
    &END COORD
    &KIND Si
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
